@page "/register"
@using EventEase.Models
@rendermode InteractiveServer

<div class="container mt-4">
    <h3 class="mb-4">Event Registration</h3>

    <EditForm Model="newEvent" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label class="form-label">Name:</label>
            <InputText class="form-control" @bind-Value="newEvent.Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Date:</label>
            <InputDate class="form-control" @bind-Value="newEvent.Date" />
        </div>
        <div class="mb-3">
            <label class="form-label">Location:</label>
            <InputText class="form-control" @bind-Value="newEvent.Location" />
        </div>
        <button type="submit" class="btn btn-primary">Register Event</button>
    </EditForm>
</div>


@code {
    private Event newEvent = new Event();

    private void HandleValidSubmit()
    {
        // Aquí deberías guardar el nuevo evento en una fuente de datos
        Console.WriteLine("Event registered: " + newEvent.Name);
    }
}